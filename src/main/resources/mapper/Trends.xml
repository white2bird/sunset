<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sunset.mapper.TrendsMapper">
    <!--  初始化用户关注，粉丝，获赞   -->
    <insert id="SetInitFollow" parameterType="com.sunset.entity.User.UserFollow">
        insert into tb_userFollow (id,uid,following,followers,star) values (#{id},#{uid},#{following},#{followers},#{star});
    </insert>
    <!--  获取用户关注，粉丝，获赞  -->
    <select id="GetUserFollw" resultType="com.sunset.entity.User.UserFollow">
        select * from tb_userFollow where uid=#{uid}
    </select>
    <!--  更新关注 -->
    <update id="UpdateUserFollowing" parameterType="com.sunset.entity.User.UserFollow">
        update tb_userFollow set following=#{following} where uid = #{uid}
    </update>
    <!--  更新粉丝 -->
    <update id="UpdateUserFollowers" parameterType="com.sunset.entity.User.UserFollow">
        update tb_userFollow set followers=#{followers} where uid = #{uid}
    </update>
    <!--  发布动态  -->
    <insert id="SetTrends" parameterType="com.sunset.entity.Trends.NewTrends">
        insert into tb_trends (id,uid,text,images,create_time) values (#{id},#{uid},#{text},#{images},#{createTime});
    </insert>
    <!--  删除动态  -->
    <delete id="DeleteTrends" parameterType="String">
        delete from tb_trends where id = #{id}
    </delete>
    <!-- 动态列表 -->
    <select id="GetTrends" resultType="com.sunset.entity.Trends.NewTrends" >
        select * from tb_trends
        <if test="uid != null">
            where uid = #{uid}
        </if>
    </select>
    <!--  含图片的动态  -->
    <select id="GetImgTrends" resultType="com.sunset.entity.Trends.NewTrends" >
        select * from tb_trends where images is not null and images != "" and images != "[]"
    </select>
    <!--  动态详情  -->
    <select id="GetTrensDetail" resultType="com.sunset.entity.Trends.NewTrends">
        select * from tb_trends where id = #{id}
    </select>
    <!--  更新动态点赞 【动态】 -->
    <update id="UpdateTrendsStar" parameterType="com.sunset.entity.Trends.NewTrends">
        update tb_trends set star=#{star} where id = #{id}
    </update>
    <!--  发表评论  -->
    <insert id="SetTrendsComm" parameterType="com.sunset.entity.Trends.CommTrends">
        insert into tb_comment (id,uid,trends_id,content,create_time) values (#{id},#{uid},#{trends_id},#{content},#{create_time});
    </insert>
    <!--  删除动态  -->
    <delete id="DeleteComm" parameterType="String">
        delete from tb_comment where id = #{id}
    </delete>
    <!--  动态评论列表  -->
    <select id="GetTrendsComm" resultType="com.sunset.entity.Trends.CommTrends">
        select * from tb_comment where trends_id=#{id}
    </select>
    <!--  点赞 【动态】 -->
    <insert id="SetTrendsStar" parameterType="com.sunset.entity.Trends.CommTrends">
        insert into tb_trends_starlog (id,uid,trends_id,create_time) values (#{id},#{uid},#{trends_id},#{create_time});
    </insert>
    <!--  查询是否点赞 【动态】 -->
    <select id="FindIsStar" resultType="String">
        select id from tb_trends_starlog where trends_id= #{trends_id} and uid= #{uid}
    </select>
    <!--  取消点赞【动态】  -->
    <delete id="DeleteStar" parameterType="com.sunset.entity.Trends.CommTrends">
        delete from tb_trends_starlog where id = #{id}
    </delete>
    <!--  评论点赞详情  -->
    <select id="GetCommentDetail" resultType="com.sunset.entity.Trends.CommTrends">
        select * from tb_comment where id = #{id}
    </select>
    <!--  点赞 【评论】 -->
    <insert id="SetCommentStar" parameterType="com.sunset.entity.User.CommStar">
        insert into tb_comment_starlog (id,uid,trends_id,comment_id,create_time) values (#{id},#{uid},#{trends_id},#{comment_id},#{create_time});
    </insert>
    <!--  查询是否点赞 【评论】 -->
    <select id="FindCommentStar" resultType="String">
        select id from tb_comment_starlog where trends_id= #{trends_id} and comment_id = #{comment_id} and uid= #{uid}
    </select>
    <!--  取消点赞【评论】  -->
    <delete id="DeleteCommentStar" parameterType="com.sunset.entity.Trends.CommTrends">
        delete from tb_comment_starlog where id = #{id}
    </delete>
    <!--  更新点赞 【评论】 -->
    <update id="UpdateCommentStar" parameterType="com.sunset.entity.User.CommStar">
        update tb_comment set star=#{star} where id = #{id}
    </update>
    <!--  查询用户点赞集合  -->
    <select id="FindUserFollow" resultType="String">
        select uid from tb_userfollow where uid= #{uid}
    </select>
    <!--  插入用户点赞  -->
    <update id="UpdateUserStar" parameterType="com.sunset.entity.User.UserFollow">
        update tb_userfollow set star=#{star} where uid = #{uid}
    </update>
    <!--  关注  -->
    <insert id="SetUserFollow" parameterType="com.sunset.entity.Trends.Followers">
        insert into tb_follower (id,uid,my_id,create_time) values (#{id},#{uid},#{my_id},#{create_time});
    </insert>
    <!-- 查询是否关注 -->
    <select id="FindIsFollow" resultType="String">
        select id from tb_follower where uid= #{uid} and my_id=#{my_id}
    </select>
    <!-- 关注列表 -->
    <select id="FindFollow" resultType="com.sunset.entity.Trends.Followers">
        select uid,my_id from tb_follower where my_id=#{uid}
    </select>
    <!--  取消关注【删除一条关注记录】  -->
    <delete id="DeleteFollow" parameterType="com.sunset.entity.User.UserFollow">
        delete from tb_follower where id = #{id}
    </delete>
</mapper>